#!/usr/bin/env bash 

# Script to quickly grab system information
# Include: 
# HOSTNAME
# CPU info 
# uptime
# Hardware info 
# Kernel info 
# Maybe number of kernel files in boot 
# Number of packages? 
# RAM and disk info 
# swap info 
# Distro 
# virt info 
# maybe netwwork info

hostname() { 
    hostname="$(hostnamectl | grep hostname | awk '{print $3}')"
} 

_uptime() {
    uptime="System $(uptime --pretty)"
}

hostname 
_uptime 

printf "\n%s\n" \
    "$hostname" \
    "$uptime" \ 
